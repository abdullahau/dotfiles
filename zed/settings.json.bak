  // Quarto & Markdown
  "file_types": {
    "Markdown": ["md", "qmd", "rmd"]
  },

    // Extensions
  "auto_install_extensions": {
    "basedpyright": true,
    "catppuccin": true,
    "catppuccin-blur": true,
    "catppuccin-icons": true,
    "codebook": true,
    "colored-zed-icons-theme": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "html": true,
    "ini": true,
    "intellij-newui-theme": true,
    "jetbrains-new-ui-icons": true,
    "jetbrains-themes": true,
    "latex": true,
    "log": true,
    "lua": true,
    "macos-classic": true,
    "make": true,
    "markdown-oxide": true,
    "markdownlint": true,
    "material-icon-theme": true,
    "postgres-language-server": true,
    "pyrefly": true,
    "python-requirements": true,
    "python-snippets": true,
    "rainbow-csv": true,
    "ruff": true,
    "sql": true,
    "tokyo-night": true,
    "toml": true,
    "ty": true,
    "typst": true,
    "vscode-great-icons": true,
    "vscode-icons": true
  },

  // Zed Misc. Settings
  "disable_ai": true, // Disable AI and Agents
  "features": {
    "edit_prediction_provider": "none" // Turn off Zed predictions
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
