// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Visual
  "show_edit_predictions": true,
  "inlay_hints": {
    "enabled": true
  },
  "ui_font_size": 13,
  "buffer_font_size": 11,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font"],
  "theme": {
    "mode": "system",
    "light": "JetBrains Light",
    "dark": "Tokyo Night Storm"
  },
  "icon_theme": "Material Icon Theme",
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "repl": {
    // Clamped with [20, 512] range.
    "max_columns": 500,
    // Clamped with [4, 256] range.
    "max_lines": 40
  },

  // Python
  // Python - venv
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv", "../.venv"],
        "activate_script": "default"
      }
    }
  },

  // Python - Jupyter IPython Kernel
  "jupyter": {
    "kernel_selections": {
      "python": "python3",
      "r": "ark"
    }
  },

  // Python - LSP
  "languages": {
    "Python": {
      "language_servers": [
        "pyrefly",
        "ruff",
        "!pylsp",
        "!ty",
        "!basedpyright",
        "..."
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": { "name": "ruff" }
        }
      ],
      "debuggers": ["Debugpy"]
    }
  },
  "lsp": {
    "pyrefly": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "pyrefly": {
          "project_includes": ["src/**/*.py", "tests/**/*.py"],
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          "search_path": ["src"],
          "ignore_errors_in_generated_code": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configurationPreference": "filesystemFirst",
          "configuration": {
            "unsafe-fixes": false,
            "format": {
              "quote-style": "double",
              "skip-magic-trailing-comma": false
            }
          },
          "codeAction": {
            "disableRuleComment": { "enable": false },
            "fixViolation": { "enable": true }
          },
          "lint": {
            "select": ["ALL"],
            // "extendSelect": ["PTH", "I"],
            "ignore": ["F401", "CPY", "D", "T20", "I", "ERA001"],
            "enable": true,
            "preview": true
          },
          "format": {
            "preview": true,
            "backend": "uv"
          },
          "fixAll": true,
          "organizeImports": false,
          "showSyntaxErrors": true,
          "lineLength": 90
        }
      }
    },
    "tinymist": {
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "$root/$name"
      }
    }
  },

  // SSH
  "ssh_connections": [
    {
      "host": "130.0.0.104",
      "username": "root",
      "args": ["-A"],
      "projects": [
        {
          "paths": ["/home/noco/Qubes"]
        },
        {
          "paths": ["/home/noco/HR"]
        },
        {
          "paths": ["/home/noco/RealEstate"]
        },
        {
          "paths": ["/home/noco/nocoflow"]
        }
      ],
      "nickname": "Noco-Linux"
    }
  ],

  // Quarto & Markdown
  "file_types": {
    "Markdown": ["md", "qmd", "rmd"]
  },

  // Zed Misc. Settings
  "disable_ai": true, // Disable AI and Agents
  "features": {
    "edit_prediction_provider": "none" // Turn off Zed predictions
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
