- defaults:
    link:
      create: true
      relink: true
    shell:
      quiet: true

- clean: ['~', '~/.config', '~/.gnupg']

- link:
    ~/.dotfiles: ''
    ~/.gitconfig:
    ~/.gitignore_global:
    ~/.inputrc:
    ~/.shell:
    ~/.zsh:
    ~/.zshrc:

- create:
  - ~/Developer

- shell:
  - git submodule sync --recursive
  # the following have to run after linking ~/.gitconfig
  - git update-submodules
  - >-
    git cleanall -f
    shell/plugins/
    zsh/plugins/
